{% block body %}

    <form method="post" action="{{ path('topics_delete', {'id': topic.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce topics ?');">
        <input type="hidden" name="_method" value="DELETE">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ topic.id) }}">
        <button class="btn btn-danger">Effacer</button>
    </form>
{% endblock %}